    <script>

        var ErrorMessage = "";

        function ValidateContact() {

            ErrorMessage = "";

            if ($("#form_name").val() == false) {
                ErrorMessage = ErrorMessage + "<div><b> Ad Girin </b> </div>";
            }
            if ($("#form_email").val() == false) {
                ErrorMessage = ErrorMessage + "<div><b> Email Girin </b> </div>";
            }
            if ($("#form_subject").val() == false) {
                ErrorMessage = ErrorMessage + "<div><b> Konu Girin </b> </div>";
            } if ($("#form_message").val() == false) {
                ErrorMessage = ErrorMessage + "<div><b> Mesaj Girin </b> </div>";
            }


            if (ErrorMessage == "") {
                return true;
            }
            else {
                return false;
            }
        }


        $(document).on('submit', '#myform', function (event) {
            event.preventDefault();

            if (ValidateContact() == true) {

                $.ajax({
                    url: '/Home/ContactForm',
                    data: new FormData(this),
                    type: 'POST',
                    //mimeType: "multipart/form-data",
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (result) {
                        console.log(result.message);
                        toastr.success('Mesajınız Başarıyla Gönderildi');

                    },
                    error: function (result) {
                        console.log(result.message);
                        toastr.error('Mesajınız Gönderilemedi.Hata!');
                    }
                });
            }

            else {

                toastr.error('Bilgileri Eksiksiz Giriniz');

                console.log("ValidationHatası");

            }
        });
    </script>

